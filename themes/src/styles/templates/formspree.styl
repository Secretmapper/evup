/* MailChimp Form Embed Code - Slim - 08/17/2011 */

.formspree{background:#fff; clear:left; font:14px Helvetica,Arial,sans-serif; }
	 
.formspree {display:block; position:relative; text-align:left; padding:10px 0 10px 3%}
.formspree h2 {font-weight:bold; padding:0; margin:15px 0; font-size:1.4em;}
.formspree input {border:1px solid #999; -webkit-appearance:none;}
.formspree input[type=checkbox]{-webkit-appearance:checkbox;}
.formspree input[type=radio]{-webkit-appearance:radio;}
.formspree input:focus {border-color:#333;}
.formspree .button {clear:both; background-color: #aaa; border: 0 none; border-radius:4px; color: #FFFFFF; cursor: pointer; display: inline-block; font-size:15px; font-weight: bold; height: 32px; line-height: 32px; margin: 0 5px 10px 0; padding:0; text-align: center; text-decoration: none; vertical-align: top; white-space: nowrap; width: auto;}
.formspree .button:hover {background-color:#777;}
.formspree .small-meta {font-size: 11px;}
.formspree .nowrap {white-space:nowrap;}     
.formspree .clear {clear:none; display:inline;}
.formspree .hidden {display:none;}

.formspree label {display:block; font-size:16px; padding-bottom:10px; font-weight:bold;}
.formspree input.email, .formspree input, .formspree textarea {display:block; padding:8px 0; margin:0 4% 10px 0; text-indent:5px; width:100%; min-width:130px;}

@media (min-width md_size) {
  .formspree input.email, .formspree input, .formspree textarea {
    width 58%
  }
}

.formspree input.button {display:block; width:35%; margin:0 0 10px 0; min-width:90px;}
