.evup-app
  height 450px
  width 275px
  background-color #670710
  box-shadow 0 2px 10px #ccc
  position relative
  overflow hidden
  .evup-about
    position absolute
    height 300px
    width 275px - 25px *2
    background-color white
    left 25px
  .card-bar-action-check, .card-bar-action-cross
    &:hover
      cursor pointer
    text-align center
    display inline-block
    padding 10px
    color white
    font-weight bold
    background-color lighten(#54000C, 45)
    border-radius 25px
    width 10px
    height 10px
    margin 10px
    line-height 10px
  for num in (1..3)
    .card-{num}
      overflow hidden
      top (20+num*15)px
      transform perspective(600px) rotateX(unit((num) * -1.5, deg)) translateZ(-((3 - num) * 20)px)
      img
        width 100%
  @keyframes back
    from
      transform perspective(600px) rotateX(unit((num) * -1.5, deg))
    to 
      transform perspective(600px) translateZ(-((2) * 20)px)
  @keyframes exit
    from
      transform perspective(600px) translateZ(-((2) * 20)px)
    to 
      transform perspective(600px) translateX(300px) translateZ(-((2) * 20)px)
  @keyframes show
    to
      width 100%
      height 100%
      top 0
      bottom 0
      left 0
      transform perspective(600px)
  @keyframes collapse
    to
      transform translateX(-200px)
  @keyframes expand
    from
      transform translateX(-200px)
    to
      transform translateX(0px)
  @keyfames back
    to
  .card-2
    animation show 0.5s 2s forwards cubic-bezier(.35,.01,.04,1), 
               back 0.4s forwards 5s cubic-bezier(.35,.01,.04,1),
                exit 1s forwards 5.5s cubic-bezier(.35,.01,.04,1) 
    box-shadow 0 2px 20px #222
  .card-3
    animation exit 1s forwards cubic-bezier(.35,.01,.04,1)
    box-shadow 0 2px 20px #222
  .card-3-content
    animation collapse 1s forwards 3s cubic-bezier(.35,.01,.04,1), 
                expand 0.4s forwards 5s ease-out
    overflow hidden
    width 70%
    height 100%
    background-color white
    position absolute
    top 0
    padding 10px
    box-sizing border-box
    h2
      font-weight 300
  .card-3-bar
    width 100%
    height 100px
    background-color lighten(#54000C, 50)
    position absolute
    bottom -1px
    p
      color white

.evup-app-2
  overflow auto
  .evup-row
    position relative
    h1
      font font_main
      font-weight 300
      position absolute
      z-index 1
    cursor pointer
    width 90%
    height 17%
    background-color white
    box-sizing border-box
    padding 10px
    margin 10px auto
