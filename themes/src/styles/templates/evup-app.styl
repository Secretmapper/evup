.blockquote
  text-align center
  font-style italic
  &::before
    content open-quote
    font-size 5rem
  &::after
    content close-quote
    font-size 5rem
  padding-top 5rem
  padding-bottom 5rem

.evup-app
  height 450px
  width 275px
  background-color #670710
  box-shadow 0 2px 10px #ccc
  position relative
  overflow hidden
  .evup-card
    opacity 0
    position absolute
    height 300px
    width 275px - 25px *2
    background-color white
    left 25px
    overflow hidden
    transform perspective(600px) rotateX(unit(-1.5, deg)) translateZ(-((3) * 20)px)
    transition all 1s cubic-bezier(.35,.01,.04,1)
    .card-image
      width 100%
   for num in (1..3)
    .evup-card-{num}
      z-index num
      overflow hidden
      transform perspective(600px) rotateX(unit((num) * -1.5, deg)) translateZ(-((3 - num) * 20)px) translateY((20+num*15)px)
      opacity 1
  .evup-card-show
    transform perspective(600px)
    width 100%
    height 100%
    left 0
  .evup-card-back
    transform perspective(600px) translateZ(-((2) * 20)px)
  .evup-card-exit
    transform perspective(600px) rotateX(unit((2) * -1.5, deg)) translateY((20 + 3 * 15)px) translateX(300px)
  .evup-card-expand
  .evup-card-left-exit
    transform perspective(600px) rotateX(unit((2) * -1.5, deg)) translateY((20 + 3 * 15)px) translateX(-300px)
  @keyframes collapse
    to
      transform translateX(-200px)
  @keyframes expand
    from
      transform translateX(-200px)
    to
      transform translateX(0px)
  .evup-card-bar-collapse
    .card-content
      transform translateX(-200px)
    .card-bar
      transform translateX(450px)
  .card-bar
    transition all 1s cubic-bezier(.35,.01,.04,1)
    width 100%
    height 100px
    background-color lighten(#54000C, 50)
    position absolute
    bottom -1px
    p
      color white
  .card-content
    transition all 1s cubic-bezier(.35,.01,.04,1)
    overflow hidden
    width 70%
    height 100%
    background-color rgba(255, 255, 255, 0.95)
    position absolute
    top 0
    padding 10px
    box-sizing border-box
    h2
      font-weight 300
  .card-bar-action-check, .card-bar-action-cross
    &:hover
      cursor pointer
    text-align center
    display inline-block
    padding 10px
    color white
    font-weight bold
    background-color lighten(#54000C, 45)
    border-radius 25px
    width 10px
    height 10px
    margin 10px
    line-height 10px

.evup-app-2
  float left
  overflow auto
  .evup-row
    position relative
    h1
      font font_main
      font-weight 300
      position absolute
      z-index 1
    cursor pointer
    width 90%
    height 17%
    background-color white
    box-sizing border-box
    padding 10px
    margin 10px auto

.evup-app-3
  float right
  overflow auto
  .evup-row
    position relative
    .evup-row-time
      display inline
      position absolute
      right 10px
    h2
      display inline
      margin 0.2rem
    width 100%
    margin 0 auto
    background-color white
    padding 5px 0
    //nth-child(odd)
    border-bottom 1px dashed #ccc
    &::before
      display block
      float left
      content "\7C\a0\a0"
      width 5px
      height 100%
    &:nth-child(2n+1):before
      color red
      background-color red
    &:nth-child(2n+2):before
      color yellow
      background-color yellow
    &:nth-child(4n):before
      color maroon
      background-color maroon

.actions
  position absolute
  bottom 0.5rem
  text-align center
  border-top 1px solid white
  width 100%
  div
    font-size: 1.2rem;
    line-height 2rem
    display inline-block
    padding-left 0.5rem
    padding-right 0.5rem
    color white
    font-weight bold
  .discover
    box-shadow 0 10px 5px -5px #eee
